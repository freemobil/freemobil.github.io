                            .hour
                                span.num
                                span.word
                            .min
                                span.num
                                span.word
                            .sec
                                span.num
                                span.word

            .container
                // Element Heading 
                .element-heading.mt-3
                    h6 Countdown 03

            .card.bg-img.bg-overlay.rounded-0.py-5(style="background-image: url('img/bg-img/30.jpg')")
                .card-body
                    .container.direction-rtl
                        h2.text-white New

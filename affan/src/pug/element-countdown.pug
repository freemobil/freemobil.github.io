doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/internet-status.pug

        include inc/dark-rtl-loader.pug

        include inc/setting-popup.pug

        // Header Area 
        .header-area#headerArea
            .container
                // Header Content 
                .header-content.position-relative.d-flex.align-items-center.justify-content-between
                    // Back Button 
                    .back-button
                        a(href="elements.html")
                            include inc/back-btn.pug

                    // Page Title 
                    .page-heading
                        h6.mb-0 Countdown

                    // Settings 
                    .setting-wrapper
                        include inc/setting-btn.pug

        .page-content-wrapper.py-3
            .container
                // Element Heading 
                .element-heading
                    h6 Countdown 01

            .container
                .card.shadow-sm.bg-img(style="background-image: url('img/core-img/2.png')")
                    .card-body.text-center.p-5
                        h2 Coming Soon
                        p It is very nicely designed &amp; coded with the latest technology.
                        #countdown1.countdown1(data-date="22-12-2022", data-time="00:00")
                            .day
                                span.num
                                span.word
                            .hour
                                span.num
                                span.word
                            .min
                                span.num
                                span.word
                            .sec
                                span.num
                                span.word

            .container
                // Element Heading 
                .element-heading.mt-3
                    h6 Countdown 02

            .container
                .card.bg-info.coming-soon-card.text-center.bg-img(style="background-image: url('img/core-img/1.png')")
                    .card-body.p-5
                        .icon-wrap
                            svg.bi.bi-clock.text-info(width="32" height="32" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg")
                                path(fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm8-7A8 8 0 1 1 0 8a8 8 0 0 1 16 0z")

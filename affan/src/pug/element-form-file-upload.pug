doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/internet-status.pug

        include inc/dark-rtl-loader.pug

        include inc/setting-popup.pug

        // Header Area 
        .header-area#headerArea
            .container
                // Header Content 
                .header-content.position-relative.d-flex.align-items-center.justify-content-between
                    // Back Button 
                    .back-button
                        a(href="elements.html")
                            include inc/back-btn.pug

                    // Page Title 
                    .page-heading
                        h6.mb-0 File Upload

                    // Settings 
                    .setting-wrapper
                        include inc/setting-btn.pug

        .page-content-wrapper.py-3
            .container
                // Element Heading 
                .element-heading
                    h6 File Upload Card 1

            .container
                .card
                    .card-body.py-5.text-center
                        img.w-75.mb-4(src="img/bg-img/29.png", alt="")
                        h5.mb-4 Upload your files

                        form(action="#", method="GET")
                            .form-file
                                input.form-control#customFile.d-none(type="file")
                                label.form-file-label.justify-content-center(for="customFile")
                                    span.form-file-button.btn.btn-danger.d-flex.align-items-center.justify-content-center.shadow-lg
                                        svg.bi.bi-plus-circle.me-2(width="22" height="22" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg")
                                            path(fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z")
                                            path(fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z")
                                        | Upload File

                        h6.mt-4.mb-0 Supported files
                        small .jpg .png .jpeg .gif

            .container
                // Element Heading 
                .element-heading.mt-3
                    h6 File Upload Card 2

            .container
                .card
                    .card-body
                        .file-upload-card
                            svg.bi.bi-file-earmark-arrow-up.text-primary(width="48" height="48" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg")
                                path(d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z")
                                path(d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z")
                                path(fill-rule="evenodd" d="M8 12a.5.5 0 0 0 .5-.5V7.707l1.146 1.147a.5.5 0 0 0 .708-.708l-2-2a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L7.5 7.707V11.5a.5.5 0 0 0 .5.5z")
                            h5.mt-2.mb-4 Upload your files

                            form(action="#", method="GET")
                                .form-file
                                    input.form-control.d-none#customFile(type="file")
                                    label.form-file-label.justify-content-center(for="customFile")
                                        span.form-file-button.btn.btn-primary.shadow.w-100 Upload File

                            h6.mt-4.mb-0 Supported files
                            small .jpg .png .jpeg .gif
            
            .container
                // Element Heading 
                .element-heading.mt-3
                    h6 Bootstrap File Upload

            .container
                .card
                    .card-body
                        form(action="#", method="GET")
                            .form-group
                                label.form-label(for="customFile") Default upload
                                input.form-control.border-0#customFile(type="file")

                            .mb-3

                            .form-group
                                label.form-label(for="customFileLg") Large upload
                                input.form-control.border-0.form-control-lg#customFileLg(type="file")

                            .mb-3

                            .form-group.mb-0
                                label.form-label(for="customFileSm") Small upload
                                input.form-control.border-0.form-control-sm#customFileSm(type="file")

        include inc/footer-nav.pug

        include inc/footer.pug